<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="800.0" prefWidth="800.0" style="-fx-background-color: #B4C7E7;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="githealthapp.controllerHealth">
   <children>
      <Label layoutX="361.0" layoutY="56.0" text="Steps">
         <font>
            <Font size="33.0" />
         </font>
      </Label>
      <LineChart fx:id="graphStepsInfo" layoutX="151.0" layoutY="133.0" legendVisible="false">
        <xAxis>
          <CategoryAxis side="BOTTOM" />
        </xAxis>
        <yAxis>
          <NumberAxis side="LEFT" />
        </yAxis>
      </LineChart>
      <DatePicker fx:id="stepsDatePicker" layoutX="70.0" layoutY="561.0" />
      <MenuButton fx:id="menuTimePeriodSteps" layoutX="314.0" layoutY="561.0" mnemonicParsing="false" prefHeight="31.0" prefWidth="95.0" text="Time">
        <items>
          <MenuItem fx:id="zeroToSixAmStepsTime" mnemonicParsing="false" onAction="#getZeroToSixAmStepsTime" text="0:00-5:59" />
          <MenuItem fx:id="sixToTwelveAmStepsTime" mnemonicParsing="false" onAction="#getsixToTwelveAmStepsTime" text="6:00-11:59" />
            <MenuItem fx:id="zeroToSixPmStepsTime" mnemonicParsing="false" onAction="#getzeroToSixPmStepsTime" text="12:00-17:59" />
            <MenuItem fx:id="sixToTwelvePmStepsTime" mnemonicParsing="false" onAction="#getsixToTwelvePmStepsTime" text="18:00-23:59" />
        </items>
      </MenuButton>
      <TextField fx:id="TBoxSteps" layoutX="441.0" layoutY="561.0" />
      <Label fx:id="lblStepsAdded" layoutX="390.0" layoutY="632.0" prefHeight="17.0" prefWidth="389.0" text="Enter how many Kelometer(s) you have walked (you may enter decimal)" />
      <Button fx:id="btnLoadSteps" layoutX="651.0" layoutY="82.0" mnemonicParsing="false" onAction="#loadStepsBtnClicked" prefHeight="44.0" prefWidth="81.0" style="-fx-background-color: #1d3454; -fx-cursor: hand; -fx-background-radius: 100; -fx-border-color: #d47a9c; -fx-border-radius: 100;" text="Load" textFill="WHITE">
         <font>
            <Font name="System Bold" size="20.0" />
         </font>
      </Button>
      <Button fx:id="btnAddSteps" layoutX="659.0" layoutY="502.0" mnemonicParsing="false" onAction="#addStepsBtnClicked" prefHeight="44.0" prefWidth="81.0" style="-fx-background-color: #d47a9c; -fx-cursor: hand; -fx-background-radius: 100; -fx-border-color: #1d3454; -fx-border-radius: 100;" text="Add" textFill="WHITE">
         <font>
            <Font name="System Bold" size="20.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
